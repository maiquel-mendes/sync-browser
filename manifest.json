{
  "manifest_version": 3,
  "name": "GitHub Gist Bookmark Sync",
  "version": "1.0.0",
  "description": "Sincroniza favoritos do navegador com um GitHub Gist privado",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
